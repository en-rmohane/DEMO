<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}SBITM - Excellence in Education{% endblock %}</title>
    
    <!-- Meta Tags -->
    <meta name="description" content="Shri Balaji Institute of Technology & Management - Premier technical education in Betul, Madhya Pradesh">
    <meta name="keywords" content="engineering college, MBA, B.Tech, SBITM, Betul, RGPV">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="{{ url_for('static', filename='images/favicon.ico') }}">
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@800;900&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <!-- CSS Libraries -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/animations.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/responsive.css') }}">
    
    {% block head %}{% endblock %}
</head>
<body class="{% block body_class %}{% endblock %}">
    <!-- Preloader -->
    <div class="preloader">
        <div class="preloader-spinner">
            <div class="spinner-circle"></div>
            <div class="spinner-text">SBITM</div>
        </div>
    </div>
    
    <!-- Floating Navigation -->
    <nav class="floating-nav">
        <div class="floating-nav-content">
            <a href="{{ url_for('index') }}" class="floating-nav-item" data-tooltip="Home">
                <i class="fas fa-home"></i>
            </a>
            <a href="{{ url_for('academics') }}" class="floating-nav-item" data-tooltip="Academics">
                <i class="fas fa-graduation-cap"></i>
            </a>
            <a href="{{ url_for('admissions') }}" class="floating-nav-item" data-tooltip="Admissions">
                <i class="fas fa-edit"></i>
            </a>
            <a href="{{ url_for('placements') }}" class="floating-nav-item" data-tooltip="Placements">
                <i class="fas fa-briefcase"></i>
            </a>
            <a href="{{ url_for('contact') }}" class="floating-nav-item" data-tooltip="Contact">
                <i class="fas fa-phone"></i>
            </a>
        </div>
    </nav>
    
    <!-- Back to Top -->
    <button class="back-to-top">
        <i class="fas fa-arrow-up"></i>
    </button>
    
    <!-- Main Header -->
    {% include 'includes/header.html' %}
    
    <!-- Main Content -->
    <main>
        {% block content %}{% endblock %}
    </main>
    
    <!-- Footer -->
    {% include 'includes/footer.html' %}
    
    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/ScrollTrigger.min.js"></script>
    
    <!-- Custom JS -->
    <script src="{{ url_for('static', filename='js/main.js') }}"></script>
    <script src="{{ url_for('static', filename='js/animations.js') }}"></script>
    <script src="{{ url_for('static', filename='js/sliders.js') }}"></script>
    
    {% block scripts %}{% endblock %}
</body>
</html>